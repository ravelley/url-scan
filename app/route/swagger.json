{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "URL Scan API",
    "description": "API to scan URLs for relevant artifacts"
  },
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Scan",
      "description": "API for scanning URLs"
    },
    {
      "name": "Metadata",
      "description": "API for fetching URL metadata"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/metadata": {
      "post": {
        "tags": [
          "Metadata"
        ],
        "summary": "Fetch URL metadata, if it has been previously scanned",
        "parameters": [{
          "in": "body",
          "name": "url",
          "description": "URL to be scanned",
          "required": true,
          "schema": {
            "type": "object",
            "required": [
              "url"
            ],
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        }],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "status"
              ],
              "properties": {
                "status": {
                  "type": "string"
                },
                "data": {
                  "$ref": "#/definitions/Metadata"
                }
              }
            }
          }
        }
      }
    },
    "/scan": {
      "post": {
        "tags": [
          "Scan"
        ],
        "summary": "Scan URL for relevant artifacts",
        "parameters": [{
          "in": "body",
          "name": "url",
          "description": "URL to be scanned",
          "required": true,
          "schema": {
            "type": "object",
            "required": [
              "url"
            ],
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        }, {
          "in": "query",
          "name": "rescan",
          "description": "Flag to specify whether the URL should be rescanned",
          "required": false,
          "type": "boolean"
        }],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "status"
              ],
              "properties": {
                "status": {
                  "type": "string"
                },
                "data": {
                  "$ref": "#/definitions/Metadata"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Metadata": {
      "properties": {
        "sourceUrl": {
          "type": "string"
        },
        "destinationUrl": {
          "type": "string"
        },
        "timestamp": {
          "type": "number"
        },
        "ipAddr": {
          "type": "string"
        },
        "screenshot": {
          "type": "string"
        }
      }
    }
  }
}